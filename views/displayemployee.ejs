<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!--Import materialize.css-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <div class="maincontainer1">
      <div class="box1">
        <div
          class="heading"
          style="display: flex; justify-content: space-between"
        >
          Employee List
          <a href="/employee/employeeinterface"
            ><i class="material-icons prefix">person_add</i></a
          >
        </div>
        <table class="striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name/Gender</th>
              <th>Birth Date</th>
              <th>Contact <br />Details</th>
              <th>Address</th>
              <th>Picture</th>
              <th>Update</th>
            </tr>
          </thead>

          <tbody>
            <%result.map((item)=>{%>
            <tr>
              <td><%=item.employeesid%></td>
              <td><%=item.employeesname%><br /><%=item.gender%></td>
              <td><%=item.dob%></td>
              <td><%=item.contactnumber%><br /><%=item.emailaddress%></td>
              <td><%=item.address%><br /><%=item.cname%>,<%=item.sname%></td>
              <td>
                <a
                  href="/employee/display_picture?eid=<%=item.employeesid%>&ename=<%=item.employeesname%>&picture=<%=item.picture%>"
                  ><img src="/images/<%=item.picture%>" width="30"
                /></a>
              </td>
              <td>
                <a href="/employee/display_by_id?eid=<%=item.employeesid%>"
                  >Edit/Delete</a
                >
              </td>
            </tr>

            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
