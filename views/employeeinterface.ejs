<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!--Import materialize.css-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/javascripts/stateproject.js"></script>
    <script>
      $(document).ready(function () {
        $(".datepicker").datepicker();
      });
      $(document).ready(function () {
        $("select").formSelect();
      });
    </script>
    
  </head>

  <body>
    <form action="/employee/submit_employee_record" method="post" enctype="multipart/form-data">
      <div class="maincontainer">
        <div class="box">
          <div class="row">
            <div class="heading" style="display: flex;justify-content: space-between;">
              Employee Register
              <a href="/employee/display_all_employee"><i class="material-icons prefix">contacts</i></a>
            </div>
           
          </div>
          <div class="row">
            <div class="input-field col s4">
              <i class="material-icons prefix">account_circle</i>
              <input
                name="firstname"
                id="firstname"
                type="text"
                class="validate"
              />
              <label for="firstname">First Name</label>
            </div>
            <div class="input-field col s4">
              <i class="material-icons prefix">account_circle</i>
              <input
                name="lastname"
                id="lastname"
                type="text"
                class="validate"
              />
              <label for="lastname">Last Name</label>
            </div>
            <div class="input-field col s4">
              <i class="material-icons prefix">event</i>
              <input name="dob" id="dob"type="text" class="datepicker" />
              <label for="dob">Birth Date</label>
            </div>
          </div>
          <div class="row">
            <div
              class="col s4 radiobtn"
              style="display: flex; justify-content: center; align-items: center"
            >
              <label>
                <input name="gender" type="radio" value="male" />
                <span>Male</span>
              </label>
              <label>
                <input name="gender" type="radio" value="female" />
                <span>Female</span>
              </label>
            </div>
            <div class="input-field col s4">
              <i class="material-icons prefix">call</i>
              <input name="contactnumber" id="contactnumber" type="text" class="validate" />
              <label for="contactnumber">Contact Number</label>
            </div>
            <div class="input-field col s4">
              <i class="material-icons prefix">email</i>
              <input name="emailaddress" id="emailaddress" type="text" class="validate" />
              <label for="emailaddress">email</label>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">home</i>
                <input name="address" id="address" type="text" class="validate" />
                <label for="address">Address</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <select name="state" id="state">
                  <option value="" disabled selected>Choose your state</option>
                </select>
                <label>State</label>
              </div>
              <div class="input-field col s6">
                <select name="city" id="city">
                  <option value="" disabled selected>Choose your city</option>
                </select>
                <label>City</label>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <div class="file-field input-field">
                  <div class="btn">
                    <span>Upload Picture</span>
                    <input type="file" name="picture"/>
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col s6 btnstyle">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                  </button>              
              </div>
              <div class="col s6 btnstyle">
                <button class="btn waves-effect waves-light" type="reset" name="action">reset
                  <i class="material-icons right">send</i>
                </button>              
            </div>
            </div>
            <div class="row">
              <div class="cols">
                <%if(status==1){%>
                  <h5>Record Submitted:</h5>
                  <%}else if(status==0){%>
                    <h5>Fail to submit record:</h5>
                    <%}%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--JavaScript at end of body for optimized loading-->
      <!-- <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </form>
  </body>
</html>
